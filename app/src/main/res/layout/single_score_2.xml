<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Statistics">


    <TextView
        android:id="@+id/statistic_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Game statistics"
        android:textSize="28sp" />

    <LinearLayout
        android:id="@+id/name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/statistic_textView"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Text" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="New Text" />
    </LinearLayout>

    <TextView
        android:id="@+id/set1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/name_text_view"
        android:text="Set 1" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/set1"
        android:layout_marginTop="79dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:text="Win by Smash" />

            <TextView
                android:id="@+id/stat_set1_smash"
                android:text="xx" />

            <TextView android:text="Win by Smash" />

            <TextView android:text="xx" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:text="Win by Net" />

            <TextView android:text="xx" />

            <TextView android:text="Win by net" />

            <TextView android:text="xx" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:text="Win by Clear" />

            <TextView android:text="xx" />

            <TextView android:text="Win by Clear" />

            <TextView android:text="xx" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginRight="10dp"
                android:text="Win by opponent's Error" />

            <TextView
                android:layout_marginRight="10dp"
                android:text="xx" />

            <TextView
                android:layout_marginRight="10dp"
                android:text="Win by opponent's Error" />

            <TextView
                android:layout_marginRight="10dp"
                android:text="xx" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>
    </TableLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/single_reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#ffbfff16"
            android:onClick="reset"
            android:text="Reset" />

        <Button
            android:id="@+id/single_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#ffbfff16"
            android:onClick="nextSet"
            android:text="Start next set" />

        <Button
            android:id="@+id/single_startover_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="#ffbfff16"
            android:onClick="startOver"
            android:text="Start over" />

    </LinearLayout>


</RelativeLayout>
